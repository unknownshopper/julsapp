rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all users under the following conditions:
    // 1. User is authenticated
    // 2. User can only access their own data
    match /clientes/{clienteId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.usuarioId;
      allow create: if request.auth != null && request.resource.data.usuarioId == request.auth.uid;
    }
    
    match /tareas/{tareaId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.usuarioId;
      allow create: if request.auth != null && request.resource.data.usuarioId == request.auth.uid;
    }
    
    // Default deny all other requests
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
